<div id="product-id-{{ section.id }}" 
     data-product-id="{{ product.id }}" 
     data-section-id="{{ section.id }}" 
     data-section-type="quick_view"
     data-cart="{{ settings.go_to_cart_enable_quick }}"
     data-zoom="{{ settings.zoom_enable }}"
     data-mobile-zoom="{{ settings.zoom_mobile_enable }}"
     data-image="{{ product.featured_image | img_url: '260x' }}"
     class="product-id product-{{ section.id }} clearfix">
  {% if product.media.size > 0 %}
  <div class="product-images bottompad six">
    {%- render 'product-images' -%}
  </div>
  {% endif %}
  <div class="product-details text-center {% if product.media.size > 0 %}six{% else %}twelve{% endif %}">
    <h2>{{ product.title }}</h2>
    {%- render 'product-form-details' -%}
    {%- render 'product-form' -%}
    <p class="additional"><a href="{{ product.url | within: collection }}">{{ 'products.general.full_details' | t }}</a></p>
  </div>
</div>