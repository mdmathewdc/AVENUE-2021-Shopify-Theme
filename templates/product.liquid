{% section 'product-template' %}
{% section 'product-related' %}
{% section 'product-recommendations' %}
{% if collection.previous_product or collection.next_product %}
<div class="container clearfix">
  <div class="twelve pagination bottompad clearfix">
    {% if collection.previous_product %}            
    <div class="{% if collection.next_product %}six{% else %}twelve{% endif %} mobile left negative-left">{%- render 'icons-theme', icon: 'left', size: '14', icon_class: 'prev' -%}{{ collection.previous_product.title | link_to: collection.previous_product, collection.previous_product.title }}</div>
    {% endif %}
    {% if collection.next_product %}
    <div class="{% if collection.previous_product %}six{% else %}twelve{% endif %} mobile right negative-right">{{ collection.next_product.title | link_to: collection.next_product, collection.next_product.title }}{%- render 'icons-theme', icon: 'right', size: '14', icon_class: 'next' -%}</div>
    {% endif %}
  </div>
</div>
{% endif %}